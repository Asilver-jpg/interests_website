<h1>Results</h1>

<%if @categories.count>0%>
<h2>Categories:</h2><br>
<ul>
    <%@categories.each do |category|%>
    <li class= "search_result"><%=link_to category["name"], category_path(category["id"])%>   </li>
    <%end%>
    </ul>
<%end%>


<%if @sub_categories.count >0%>
<h2>Sub-Categories:</h2><br>
<ul>
    <%@sub_categories.each do |sub_category|%>

            <li class= "search_result"> <%=link_to sub_category["name"], sub_category_path(sub_category["id"])%> </li>
    <%end%>
    </ul>
<%end%>

<%if @profiles.count >0%>
<h2>Profiles:</h2><br>
<ul>
    <%@profiles.each do |profile|%>
            <li class= "search_result"> <%=link_to profile["username"], profile_path(profile["id"])%> </li>
    <%end%>
    </ul>
<%end%>

